<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <entry key="selectLastProductCode">
        SELECT MAX(A.PRODUCT_CODE)
          FROM PRODUCT A
    </entry>

    <entry key="insertProduct">
        INSERT INTO Product
        (
        PRODUCT_CODE
        , CATEGORY_CODE
        , PRODUCT_NAME
        , PRICE
        , EA
        )
        VALUES
        (
        ?
        , ?
        , ?
        , ?
        , ?
        )
    </entry>
    <entry key="selectAllProductList">
        SELECT A.Product_CODE
        , A.Product_NAME
        FROM Product A
    </entry>
    <entry key="deleteProductCode">
        DELETE FROM PRODUCT
         WHERE PRODUCT_CODE = ?
    </entry>

    <entry key="updateProductEA">
        UPDATE PRODUCT
        SET EA = EA + ?
        WHERE PRODUCT_CODE = ?
    </entry>


    <entry key="insertStock">
        INSERT INTO STOCK
        (
        SUPPLIER_CODE,
        PRODUCT_CODE,
        INBOUND_DATE,
        INBOUND_EA
        )
        VALUES
        (
        ?,
        ?,
        ?,
        ?
        )
    </entry>
</properties>